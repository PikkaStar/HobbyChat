<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">

      <%= render 'post_tag', tag_list: @tag_list %>

      <h2 class="text-center">
        <i class="fa-solid fa-book-open"></i>
          みんなの投稿
        <i class="fa-solid fa-book-open"></i>
      </h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p class="text-center">
        <%= link_to '新しい順', admin_posts_path(latest: "true") %>
       |<%= link_to '古い順', admin_posts_path(old: "true") %>
       |<%= link_to 'いいね多い順', admin_posts_path(favorite_count: true) %>
       |<%= link_to 'コメント多い順', admin_posts_path(comment_count: true) %>
      </p>

      <div class="d-flex flex-wrap">
        <%= render 'admin/posts/index', posts: @posts %>
      </div>

      <div class="d-flex justify-content-center">
      <%= paginate @posts %>
      </div>

    </div>
  </div>
</div>