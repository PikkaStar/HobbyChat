<div class="flash-notice text-center">
  <%= flash[:notice] %>
</div>

<div class="flash-alert text-center">
  <%= flash[:alert] %>
</div>

<div class="container">
 <h3><%= @user.name %>さんのページ</h3>
  <div class="row">

    <div class="col-4">
      <%= render "admin/users/info2",user: @user %>
    </div>

    <div class="col-7 offset-1">
     <% if @groups.any? %>
       <h3><%= @user.name %>が参加してるグループ一覧</h3>
        <table class="table table-hover">
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>マスター</th>
          </tr>
          <% @groups.each do |group| %>
          <tr>
            <td><%= image_tag group.get_group_image(100,100) %></td>
            <td><%= link_to group.name, admin_group_path(group.id) %></td>
            <td><%= link_to group.user.name,admin_user_path(group.owner_id) %></td>
          </tr>
          <% end %>
        </table>
      <% else %>
        <p><%= @user.name %> はグループに入っていません。</p>
      <% end %>

    </div>
  </div>
</div>