<div class="container">
  <div class="row mx-auto">
    <div class="col-md-8 mx-auto">

      <%= render 'admin/shared/error_messages', resource: @user %>

      <%= form_with model: @user,url: admin_user_path,method: :patch do |f| %>
      <p>プロフィール画像</p>
      <%= f.file_field :profile_image %><br>

      <%= f.label :name,"名前" %>
      <%= f.text_field :name,class: "form-control" %>

      <%= f.label :introduction,"自己紹介" %>
      <%= f.text_area :introduction,row: "5",class: "form-control" %>

      <%= f.radio_button :is_active, true,style: 'transform: scale(1.5);' %>
      <%= f.label :is_active,"有効" %>

      <%= f.radio_button :is_active,false,style: 'transform: scale(1.5);',class: "ml-4" %>
      <%= f.label :is_active,"退会" %>

      <div class="text-center">
      <%= f.submit "更新",class: "btn btn-success mt-3 form-control" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
