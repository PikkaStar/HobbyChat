<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="text-center"><%= @user.name %>さんがいいねした投稿一覧</h2>

      <div class="d-flex flex-wrap">
       <% @posts.each do |post| %>
        <div class="card mb-4 ml-5" style="width: 10rem; background-color: #f7f6f5;">
          <div class="mx-auto">
           <%= link_to post_path(post.id),class: "button01" do  %>
            <%= image_tag post.get_image(200,200), style: "width: 150px; height: 120px;" %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
          </div>
           <% end %>
          <ul class="list-group list-group-flush">
            <%= link_to user_path(post.user_id), class: "list-group-item button01" do %>
              <%= post.user.name %>
            <% end %>

              <% unless post.user_id == current_user.id %>
                <% if post.favorited_by?(current_user) %>
                <%= link_to post_favorite_path(post.id),method: :delete, class: "list-group-item button01 favorited" do %>♥<%= post.favorites.count %>いいね<% end %>
                <% else %>
                <%= link_to post_favorite_path(post.id),method: :post, class: "list-group-item button01 unfavorited" do %>♡<%= post.favorites.count %>いいね<% end %>
                <% end %>
              <% else %>
              <div class="list-group-item button01">
              ♥<%= post.favorites.count %>いいね
              </div>
              <% end %>

            <li class="list-group-item">コメント数</li>
          </ul>
        </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-center">
      <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>