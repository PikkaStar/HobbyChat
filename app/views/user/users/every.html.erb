<div class="container">
  <div class="row">
    <div class="col-12">
      <h3 class="text-center"><%= @user.name %>さんの投稿</h3>

      <div class="d-flex flex-wrap">
       <% @posts.each do |post| %>
        <div class="card mb-4 ml-5" style="width: 10rem; background-color: #f7f6f5;">
          <div class="mx-auto">
            <%= link_to post_path(post.id),class: "button01" do  %>
              <%= image_tag post.get_image(200,200), style: "width: 150px; height: 100px;" %>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.body %></p>
            </div>
            <% end %>
          <ul class="list-group list-group-flush">
              <% unless post.user_id == current_user.id %>
                <% if post.favorited_by?(current_user) %>
                <%= link_to post_favorite_path(post.id),method: :delete, class: "list-group-item button01 favorited" do %>♥<%= post.favorites.count %>いいね<% end %>
                <% else %>
                <%= link_to post_favorite_path(post.id),method: :post, class: "list-group-item button01 unfavorited" do %>♡<%= post.favorites.count %>いいね<% end %>
                <% end %>
              <% else %>
              <div class="list-group-item button01">
              ♥<%= post.favorites.count %>いいね
              </div>
              <% end %>
            <li class="list-group-item">コメント数</li>
          </ul>
        </div>
        <% end %>
      </div>
      <%= paginate @posts %>
    </div>
  </div>
</div>
