<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3 class="text-center"><%= @user.name %>さんの投稿</h3>

      <div class="d-flex flex-wrap">
       <% @posts.each do |post| %>
        <div class="card mb-4 ml-5" style="width: 10rem; background-color: #f7f6f5;">
          <div class="mx-auto">
            <%= image_tag post.get_image(200,200), style: "width: 150px; height: 100px;" %>
          </div>

            <%= link_to post_path(post.id),class: "button01" do  %>
            <div class="card-body">
              <h5 class="card-title"><%= truncate(post.title, length: 5, omission: '..') %></h5>
              <p class="card-text"><%= truncate(post.body, length: 9, omission: '...') %></p>
            </div>
            <% end %>

          <ul class="list-group list-group-flush">

              <span id="favorite_btn<%= post.id %>">
              <%= render "user/favorites/favorite",post: post %>
              </span>

            <div class="list-group-item button01 d-flex align-items-center">
              コメント<%= post.comments.count %>件
            </div>
          </ul>
        </div>
        <% end %>
      </div>
      <%= paginate @posts %>
    </div>
  </div>
</div>
