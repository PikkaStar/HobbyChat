<div class="flash-notice text-center">
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-3">
      <%= image_tag @group.get_group_image(100,100) %>
      <% if @group.owner_id == current_user.id %>
        <%= link_to  "編集",edit_group_path(@group),class: "btn btn-success" %>
      <% end %>
      <h3><%= @group.name %></h3>
      <table class="table table-hover">
        <tr>
          <th>マスター</th>
          <td><%= @group.user.name %></td>
        </tr>
        <tr>
          <th>メンバー</th>
          <td><%= @group.users.count+1 %>人</td>
        </tr>
        <tr>
          <th>作成日</th>
          <td><%= @group.created_at.in_time_zone("Asia/Tokyo").strftime("%Y/%m/%d") %></td>
        </tr>
      </table>
    </div>


    <div class="col-8 offset-1">
      <h1>ランキング</h1>
    </div>
  </div>
</div>
