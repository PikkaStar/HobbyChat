<div class="container">
  <div class="row mx-auto">
    <div class="col-md-8 mx-auto">

      <div class="title">グループ作成</div>

      <%= render 'user/shared/error_messages', resource: @group %>

      <%= form_with model: @group do |f| %>
      <p>グループ画像</p>
      <%= f.file_field :group_image %><br>

      <%= f.label :name,"名前" %>
      <%= f.text_field :name,class: "form-control" %>

      <%= f.label :introduction,"自己紹介" %>
      <%= f.text_area :introduction,row: "5",class: "form-control" %>

      <label>タグ(,　で区切ると複数登録できます)</label>
      <%= f.text_field :genre_name,placeholder: "タグを入力してください", class: "form-control" %>

      <div class="text-center">
      <%= f.submit "更新",class: "btn btn-success mt-3 form-control" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

