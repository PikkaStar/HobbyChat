<div class="container">
  <div class="row mx-auto">
    <div class="col-md-8 mx-auto">

      <div class="title">編集画面</div>

      <%= render 'user/shared/error_messages', resource: @post %>

      <%= form_with model: @post do |f| %>
      <p>画像</p>
      <%= f.file_field :image %><br>

      <%= f.label :title,"タイトル" %>
      <%= f.text_field :title,autofocus: true,class: "form-control" %>

      <%= f.label :body,"本文" %>
      <%= f.text_area :body,row: "5",class: "form-control" %>

      <label>タグ(スペースで区切ると複数登録できます)</label>
      <%= f.text_field :name,placeholder: "タグを入力してください", class: "form-control" %>

      <%= f.submit "更新",class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>


